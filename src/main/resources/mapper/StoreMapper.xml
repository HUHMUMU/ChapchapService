<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acorn.chapspring.mapper.StoreMapper">
<!--    가게 Dto 맵-->
    <resultMap id="StoreMap" type="StoreDto">
        <id column="store_num" property="storeNum"/>
        <result column="store_name" property="storeName"/>
        <result column="short_info" property="shortInfo"/>
        <result column="main_img" property="mainImg"/>
    </resultMap>

    <!--    가게 Dto 맵으로 사용할 쿼리문-->
    <select id="findByStoreNum" resultMap="StoreMap">
        select store_name from stores where store_num=#{stoerNum}
    </select>





</mapper>