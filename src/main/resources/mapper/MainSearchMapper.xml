<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acorn.chapspring.mapper.MainSearchMapper">
    <resultMap id="FindByStoreNameMap" type="com.acorn.chapspring.dto.StoresDto">
        <result column="store_name" property="storeName"/>
    </resultMap>

    <select id="findByNameContaining" resultMap="FindByStoreNameMap">
        SELECT * FROM stores WHERE store_name LIKE CONCAT('%',#{storeName},'%')
    </select>

</mapper>